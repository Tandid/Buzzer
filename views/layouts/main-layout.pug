include ../mixins/mixins


<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.9/cropper.min.css')
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/main.css")
        link(rel="icon" type="image/svg+xml" href="/svgs/duck.svg")
    body
        script.
            let userLoggedIn = !{userLoggedInJs};
        .container
            .row
                nav.col-2
                    .navTop
                        a(href="/") 
                            .navRow
                                img.duckSVG(src="/svgs/duck.svg")
                        a(href="/")
                            .navRow        
                                i.fas.fa-home
                                span Home
                        a(href="/search")
                            .navRow    
                                i.fas.fa-hashtag
                                span Explore
                        a(href="/notifications")
                            .navRow    
                                i.fas.fa-bell
                                span#notificationBadge
                                span Notifications
                        a(href="/messages")
                            .navRow
                                i.fas.fa-envelope
                                span#messagesBadge
                                span Messages
                        a(href="/")
                            .navRow    
                                i.fas.fa-bookmark
                                span Bookmarks
                        a(href="/")
                            .navRow    
                                i.fas.fa-list-alt 
                                span Lists
                        a(href="/profile")
                            .navRow    
                                i.fas.fa-user
                                span Profile
                        a(href="/")
                            .navRow    
                                i.fas.fa-ellipsis-h
                                span More 
                        a(href="/logout")
                            .navRow
                                i.fas.fa-sign-out-alt
                                span Logout
                        button.tweetButton
                            .tweetButtonRow    
                                //- i.fas.fa-feather
                                span Quack
                        
                    .navBottom
                        a(href="/profile")
                            .navBottom
                                .userImageContainer
                                    img(src=userLoggedIn.profilePic, alt="User profile image")
                                .userInfo
                                    span #{userLoggedIn.firstName} #{userLoggedIn.lastName}
                                    span.username @#{userLoggedIn.username}
                                i.fas.fa-ellipsis-h

                
                .mainSectionContainer.col-6
                    .titleContainer
                        h1 #{pageTitle}
                        block headerButton

                    block content

                .exploreSectionContainer.col-3                 
                    div
                        .searchWrapper
                            .searchBarContainer
                                i.fas.fa-search
                                input#searchBox(type="text", name="searchBox", data-search="users", placeholder="Search Quacker")
                            //-     .resultsContainer
                            
                            //- +createPostModals(userLoggedIn)
                        
                        .newsContainer
                            h1 What's happening 
                            .news
                            
                        .linksContainer
                                h1 Who to Follow
                                .linkedInRow
                                    i.fab.fa-linkedin 
                                    span linkedin.com/tandidalam
                                    .followButtonContainer
                                        a.followButton(href="https://www.linkedin.com/in/tandidalam/" target="_blank") Follow
                                .gitHubRow        
                                    i.fab.fa-github 
                                    span github.com/Tandid
                                    .followButtonContainer 
                                        a.followButton(href="https://github.com/Tandid" target="_blank") Follow 
                    
                    a.chatBoxMessageContainer(href="/messages")
                        span Messages
                        i.fas.fa-chevron-up
                                  
                                   
                                    
                    
        #notificationList

        script(src='https://kit.fontawesome.com/85404227e2.js' crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.9/cropper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
        script(src="https://cdn.socket.io/4.3.2/socket.io.min.js" integrity="sha384-KAZ4DtjNhLChOB/hxXuKqhMLYvx3b5MlT55xPEiNmREKRzeEm+RVPlTnAn0ajQNs" crossorigin="anonymous")

        block scripts

        script(src="/js/common.js")
        script(src="/js/clientSocket.js")
        script(src="/js/search.js")

